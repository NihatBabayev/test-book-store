<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <!-- Create Author table first -->
    <changeSet id="1" author="nihat">
        <sql>
            CREATE SCHEMA IF NOT EXISTS bookstore;
        </sql>
    </changeSet>


    <changeSet id="2" author="nihat">
        <createTable tableName="authors">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="age" type="INT"/>
        </createTable>
    </changeSet>

    <!-- Create Book table with foreign key reference to Author table -->
    <changeSet id="3" author="nihat">
        <createTable tableName="books">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_book_author" references="authors(id)"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Student table -->
    <changeSet id="4" author="nihat">
        <createTable tableName="students">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="age" type="INT"/>
        </createTable>
    </changeSet>

    <!-- Create User table with foreign key reference to Student table -->
    <changeSet id="5" author="nihat">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="roles" type="VARCHAR(255)"/>
            <column name="student_id" type="BIGINT">
                <constraints foreignKeyName="fk_user_student" references="students(id)"/>
            </column>
        </createTable>
    </changeSet>

